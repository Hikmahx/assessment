{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*"] // Adjust to match the root directory
    }
  },
  "include": ["**/*.ts"], // Adjust this to include all TypeScript files
  "exclude": ["node_modules", "**/*.spec.ts"]
}
